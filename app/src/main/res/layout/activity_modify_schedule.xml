<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >



    <EditText
        android:id="@+id/m_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="제목"
        />


    <TextView
        android:id="@+id/m_start_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/m_title"
        android:layout_marginTop="10dp"
        android:text="시작"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/m_start_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/m_title"
        android:layout_toRightOf="@+id/m_start_tv"
        android:hint="X월 X일" />

    <TextView
        android:id="@+id/m_end_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/m_start_date"
        android:layout_marginTop="10dp"
        android:text="종료"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/m_end_date"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/m_start_date"
        android:layout_toRightOf="@+id/m_end_tv"
        android:hint="X월 X일" />

    <TextView
        android:id="@+id/m_loc_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/m_end_date"
        android:layout_marginTop="10dp"
        android:text="장소"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/m_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/m_end_date"
        android:layout_toRightOf="@+id/m_end_tv"
        android:hint="경기도 성남시 수정구" />

    <Button
        android:id="@+id/m_back_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:layout_below="@+id/m_location"
        />
    <Button
        android:id="@+id/m_ok_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_toRightOf="@id/m_back_bt"
        android:layout_below="@+id/m_location"
        />
    <Button
        android:id="@+id/m_delete_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:layout_toRightOf="@id/m_ok_bt"
        android:layout_below="@+id/m_location"
        />

    <TextView
        android:id="@+id/m_st_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/m_title"
        android:layout_toRightOf="@+id/m_start_date"
        android:layout_marginTop="10dp"
        android:text="시간"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/m_et_st_time"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/m_title"
        android:layout_toRightOf="@+id/m_st_time"
        android:hint="9:00" />

    <TextView
        android:id="@+id/m_end_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/m_start_date"
        android:layout_toRightOf="@+id/m_end_date"
        android:layout_marginTop="10dp"
        android:text="종료"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/m_et_end_time"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:layout_below="@+id/m_start_date"
        android:layout_toRightOf="@+id/m_end_time"
        android:hint="X월 X일" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/m_back_bt"
        >

        <RadioButton
            android:layout_weight="1"
            android:text="시간"
            android:id="@+id/rg_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:layout_weight="1"
            android:text="하루종일"
            android:id="@+id/rg_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
</RelativeLayout>